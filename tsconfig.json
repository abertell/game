{
    "compilerOptions": {
        "noEmit": true,
        "rootDir": "src",
        "target": "es2018",
        "lib": [
            "DOM",
            "ES2019"
        ],
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "swf-lib/*": [
                "@exit-path/swf-lib/*"
            ]
        }
    }
}