{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "target": "es2018",
    "lib": ["DOM", "ES2019"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true
  }
}
