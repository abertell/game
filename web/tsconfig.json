{
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "target": "es2018",
    "lib": ["DOM", "ES2019"],
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "swf-lib": ["../node_modules/@kiootic/swf-lib"]
    }
  },
  "references": [{ "path": "../game" }]
}
